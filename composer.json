{
	"name": "ofat/yii2-yashop",
	"description": "YaShop - Yii 2 Yet another shop",
	"keywords": ["yii2", "framework", "shop"],
	"type": "yii2-extension",
	"license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Vitaliy Ofat",
            "email": "ofatv22@gmail.com"
        }
    ],
    "minimum-stability": "dev",
	"require": {
		"php": ">=5.4.0",
		"yiisoft/yii2": "*",
		"yiisoft/yii2-bootstrap": "*",
        "ofat/yii2-yashop-ses": "*",
		"yiisoft/yii2-twig": "*",
        "yiisoft/yii2-sphinx": "*",
        "yiisoft/yii2-imagine": "*"
	},
	"require-dev": {
		"yiisoft/yii2-codeception": "*",
		"yiisoft/yii2-debug": "*",
		"yiisoft/yii2-gii": "*",
		"codeception/codeception": " 1.8.*@dev",
		"codeception/specify": " *",
		"codeception/verify": " *"
	},
	"suggest": {
		"codeception/codeception": "Codeception, 1.8.*@dev is currently works well with Yii.",
		"codeception/specify": "BDD style code blocks for PHPUnit and Codeception",
		"codeception/verify": "BDD Assertions for PHPUnit and Codeception",
		"yiisoft/yii2-faker": "Fixtures generator for Yii2 based on Faker lib"
	},
	"scripts": {
		"post-create-project-cmd": [
			"yii\\composer\\Installer::setPermission"
		]
	},
    "autoload": {
        "psr-4": {
            "yashop\\": ""
        }
    },
	"config": {
		"process-timeout": 1800
	}
}
