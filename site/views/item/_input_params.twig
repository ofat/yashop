{% for param in params %}
<div class="form-group input-params">
    <label class="col-md-3 control-label">{{ param.name }}:</label>
    <div class="col-md-9">
        {% for value in param.items %}
            {% set isImage = value.image is defined %}
            {{- Html.beginTag('a', {
                href: isImage ? value.image : '#',
                rel: 'preload',
                class: 'input-property' ~ (isImage ? ' image' : ''),
                title: value.name,
                'data-pid': param.id,
                'data-vid': value.id
            })|raw -}}
            {% if isImage %}
                {{ Html.img(value.image ~ '_40x40.jpg', {alt: value.name})|raw }}
            {% else %}
                {{- value.name -}}
            {% endif %}
            {{- Html.endTag('a')|raw -}}
        {% endfor %}
        <input type="hidden" name="{{ param.id }}" class="input-param" id="pid_{{ param.id }}" value="0">
    </div>
</div>
{% endfor %}