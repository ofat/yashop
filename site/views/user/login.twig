{{- use(['yii\\helpers\\Html','yii\\widgets\\ActiveForm']) -}}
{{- setTitle(t('user','Login')) -}}
{{- addBreadcrumb(this.title) -}}
<div class="site-login">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <h3 class="page-header">{{ this.title }}</h3>

            {% set form = form_begin({id: 'login-form'}) %}
            {{ form.field(model, 'username') | raw }}
            {{ form.field(model, 'password').passwordInput() | raw }}
            {{ form.field(model, 'rememberMe').checkbox() | raw }}
            <div style="color:#999;margin:1em 0">
                {{ t('user', 'If you forgot your password you can') }}
                {{ Html.a( t('user', 'reset it'), ['user/remind'] ) | raw }}.
            </div>
            <div class="form-group">
                {{ Html.submitButton( t('user', 'Enter'), {class: 'btn btn-primary', name: 'login-button'} ) | raw }}
            </div>
            {{- form_end() -}}
        </div>
    </div>
</div>